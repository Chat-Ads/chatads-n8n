{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "credentials/**/*.ts",
    "nodes/**/*.ts",
    "index.ts"
  ]
}
